<% layout('layouts/boilerplate.ejs') %>
<h1><%=camp.title%></h1>
<h2><%=camp.location%></h2>
<img src="<%=camp.image%> " alt="campground" width="500" height="500" />
<p><%=camp.description%></p>

<a href="/campgrounds">Back to Campgrounds</a>
<a href="/campground/<%=camp._id%>/edit ">Edit Campground</a>
<!-- Para deletar um acampamento, utilizaremos um método POST porém com nosso pacote override podemos criar um DELETE fake -->
<!-- Esse delete precisa receber o ID e o método fake que iremos utilizar, conforme abaixo -->
<form action="/campgrounds/<%=camp._id%>?_method=DELETE" method="POST">
  <button type="submit">Delete Campground</button>
</form>
