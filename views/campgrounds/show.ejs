<% layout('layouts/boilerplate.ejs') %>

<div class="row">
  <div class="col-6 offset-3">
    <div class="card">
      <img
        src="<%=camp.image%>"
        class="card-img-top"
        alt="campground"
        width="500"
        height="500"
      />
      <div class="card-body">
        <h5 class="card-title"><%=camp.title%></h5>
        <h5 class="card-title text-muted"><%=camp.location%></h5>
        <p class="card-text"><%=camp.description%></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">$ <%=camp.price%>/ night</li>
      </ul>
      <div class="card-body">
        <a href="/campground/<%=camp._id%>/edit" class="card-link btn btn-info"
          >Edit Campground</a
        >
        <form
          class="d-inline"
          action="/campgrounds/<%=camp._id%>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger" type="submit">
            Delete Campground
          </button>
        </form>
      </div>
      <div class="card-footer">
        <a class="btn btn-primary" href="/campgrounds"> Back to Campgrounds</a>
      </div>
    </div>
    <h2 class="mt-4 mb-4">Tell Us about your Experience</h2>
    <!-- Action do form referenciando ao app.post dessa rota no arquivo app.js -->
    <form
      action="/campgrounds/<%=camp._id%>/reviews"
      method="POST"
      class="mb-3"
    >
      <div class="mb-3">
        <label class="form-label" for="rating">Rating</label>
        <input
          type="range"
          class="form-range"
          min="1"
          max="5"
          name="review[rating]"
          id="rating"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="body">Review:</label>
        <textarea
          class="form-control"
          name="review[body]"
          id="body"
          cols="30"
          rows="3"
        ></textarea>
      </div>
      <button class="btn btn-success">Send</button>
    </form>
  </div>
</div>
